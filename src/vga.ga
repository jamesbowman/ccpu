: screen
    @p call zeroes
      640*35-1

    @p push @p
      640*240-1
      63
    dup ! unext

    @p push @p
      640*120-1
      63|(63<<6)|(63<<12)
    dup ! unext

    @p push @p
      640*120-1
      32|(32<<6)
    dup ! unext

    @p call zeroes
      640*10-1
    jump screen

: zeroes
    push
    dup dup or
    dup ! unext
    ;
