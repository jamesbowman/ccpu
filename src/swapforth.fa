CODE g-new
  @p @p !b    \set a
     EAST     \west in 605
     a @p a!
  !b dup dup
  or @p !b    \send 0
     @p !
  !b @p !b    \send arg1
     @p ! @p
  !b @+ !b @p \send arg2
     ! @ !p   \read return val
  !b @b @p    \reset a
     a!
  !b
  call DORETURN

CODE g-del
  @p @p !b
     EAST
     a @p a!
  !b @p !b @p
     @p !
     3
  !b @p !b
    @p !
  !b @+ @p
     @ !p a!
  !b @b drop
  call DORETURN

CODE redraw
  @p @p !b
     EAST
     a @p a!
  !b @p !b @p
     @p !
     4
  !b @p !b
     @ !p a!
  @b drop
  call DORETURN

